<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
     integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <title>Hello, world!</title>
  </head>
  <body>
    <nav class="navbar navbar-light bg-light">
        <form class="container-fluid" action="/massage-usernsme" method="POST">
          <input type="text" name="idf" value='<%=idf%>'  hidden/>
          <input type="text" name="fname" value='<%=fname%>'  hidden/>
          <div class="input-group">
            <span class="input-group-text" style="margin-left: 107px;" id="basic-addon1">@</span>
            <input class="form-control" placeholder="your friends Username" style="margin-right: 30px; border-radius: 4px;"
            aria-label="Username" type="text" aria-describedby="basic-addon1" name="username" required>
            <input class="btn btn-primary" style="border-radius: 7px; width: 80px;" type="submit" value="Search">
          </div>
        </form>
    </nav>
    <% if(flag == 1) { %>
      <div class="alert alert-warning alert-dismissible fade show container" style="width: 1300px;" role="alert">
        <strong><%= username %> </strong> does't exist please recheck and try again.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>  
    <% if(flag == 2) { %> 
    <form class="container" action="/massage-send/<%=idt%>" method="POST">
      <input type="text" name="idf" value='<%=idf%>'  hidden/>
      <input type="text" name="fname" value="<%=fname%>"  hidden/>
      <label style="color: rgb(42, 42, 243);">Massage to <%= tname %> </label>
      <input type="text" name="tname" value='<%= tname %>'  hidden/>
      <div class="form-floating">
        <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" 
        style="height: 100px" name="massage" required></textarea>
        <label for="floatingTextarea2">Massage</label>
      </div>
      <input class="btn btn-primary" style="border-radius: 7px; margin-top: 5px;" type="submit" value="Send massage">
    </form>
    <% } %> 
    <% if(temp == 1) { %> 
      <div class="alert alert-success alert-dismissible fade show container" style="margin-top: 5px;" role="alert">
        <strong><%= tname %> </strong> successfully received this massage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %> 
    <form action="/back-to-home" method="POST"><div class="d-grid gap-2 col-6 mx-auto" style="margin-top:10px;">
      <input name="id" value="<%= idf %>" hidden/>
      <input name="name" value="<%= fname %>" hidden/>
      <button class="btn btn-primary" type="submit">Back to home</button>
    </div></form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
  </body>
</html>